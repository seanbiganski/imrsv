<div class="page-header">
  <%= link_to new_project_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Project
  <% end %>
  <h1>Listing projects</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
          <th>Ad Impressions</th>
          <th>Name</th>
          <th>Token</th>
          <th></th>
          <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @projects) do |project| %>
        <% if project.ad_activities.count > 0 %>
          <td><span class="label label-success label-as-badge"><%= project.ad_activities.count %></span></td>
        <% else %>
          <td><span class="label label-default label-as-badge"><%= project.ad_activities.count %></span></td>
        <% end %>
        <td><%= link_to project.name, project %></td>
        <td><%= project.token %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
