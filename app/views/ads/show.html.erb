<div class="page-header">
  <%= link_to ads_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_ad_path(@ad), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>View Ad</h1>
</div>

<div class="media">
  <div class="media-left">
    <a href="#">
      <img style="max-width:250px" class="media-object" src=<%= @ad.file.url %> alt="Generic placeholder image">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><%= @ad.title %></h4>
    <p><%= @ad.description %></p>
  </div>
</div>
