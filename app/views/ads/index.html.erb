<div class="page-header">
  <%= link_to new_ad_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Ad
  <% end %>
  <h1>Listing ads</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Impressions</th>
        <th>Title</th>
        <th>User</th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @ads) do |ad| %>
        <% if ad.ad_activities.count > 0 %>
          <td><span class="label label-success label-as-badge"><%= ad.ad_activities.count %></span></td>
        <% else %>
          <td><span class="label label-default label-as-badge"><%= ad.ad_activities.count %></span></td>
        <% end %>
        <td><%= link_to ad.title, ad %></td>
        <td><%= ad.user.email %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Delete', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
