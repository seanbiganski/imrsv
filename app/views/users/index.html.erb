<div class="page-header">
  <h1>Users</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Email</th>
            <th>Created</th>
            <th>Promoter</th>
            <th>Advertiser</th>
            <th>Admin</th>
            <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @users) do |user| %>
            <td><%= link_to user.email, user_path(user) %></td>
            <td><%= user.created_at %></td>
            <td><%= human_boolean(user.promoter) %></td>
            <td><%= human_boolean(user.advertiser) %></td>
            <td><%= human_boolean(user.admin) %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
